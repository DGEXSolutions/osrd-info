{
  "version": "0.2",
  "language": "en",
  "files": [
    "**/*.en.md",
    "**/*.fr.md",
    "*.md",
  ],
  "import": [
    "@cspell/dict-rust/cspell-ext.json",
    "@cspell/dict-sql/cspell-ext.json",
    "@cspell/dict-fr-fr/cspell-ext.json",
  ],
  "dictionaries": [ 
    "acronyms",
    "names",
    "project-words",
    "rust",
    "softwareTerms",
    "sql",
    "unwanted-words",
  ],
  "overrides": [
    {
      "filename": "**/*.en.md",
      "dictionaries": [
        "en_US",
        "en-gb",
      ]
    },
    {
      "filename": "*.md",
      "dictionaries": [
        "en_US",
        "en-gb",
      ]
    },
    {
      "filename": "**/*.fr.md",
      "dictionaries": [
        "fr-fr",
      ]
    },
  ],
  "allowCompoundWords": false,
  "caseSensitive": false,
  "dictionaryDefinitions": [
    {
      "name": "acronyms",
      "path": "./acronyms.txt",
      "addWords": true
    },
    {
      "name": "names",
      "path": "./names.txt",
      "addWords": true
    },
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "addWords": true
    },
    {
      "name": "unwanted-words",
      "path": "./unwanted-words.txt",
      "addWords": true
    },
  ],
}
